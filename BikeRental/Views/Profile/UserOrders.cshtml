@using BikeRental.App_GlobalResources
@model BikeRental.ViewModel.UserOrdersPageViewModel
@{
    ViewBag.Title = Resource.MyOrders;
}

<header id="head" class="secondary"></header>

<div class="container">
    <div class="row">
        <article class="col-sm-2 maincontent"></article>
        <article class="col-sm-8 maincontent">
            <header class="page-header">
                <h1 class="page-title">@Resource.MyOrders</h1>
            </header>
            @foreach (var order in Model.UserOrders)
            {
                <p>
                    <img src="@order.Photo" alt="" class="img-rounded pull-right" width="300">
                </p>
                <h4>@Resource.DateOrder : @order.DateOrder</h4>
                <h4>@Resource.TimeStart : @order.TimeStart</h4>
                <h4>@Resource.TimeEnd : @order.TimeEnd</h4>
                <h4>@Resource.PriceOrder : @order.PriceOrder</h4>
                if (order.Status)
                {
                    <h4 style="color: green">@Resource.Status : @Resource.Active</h4>
                }
                else
                {
                    <h4 style="color: red">@Resource.Status : @Resource.NotActive</h4>
                }
                <h4>@Resource.BeforeStart : @order.BeforeStart</h4>
                <h4>@Resource.BeforeEnd : @order.BeforeEnd</h4>

                @Html.ActionLink(Resource.Delete, "DeleteOrder", "Profile", new {id = order.IdOrder}, new { @class = "btn btn-action btn-lg", @role = "button" })
                <br/><br /><br />
            }

        </article>
        <article class="col-sm-2 maincontent"></article>
    </div>
</div>
